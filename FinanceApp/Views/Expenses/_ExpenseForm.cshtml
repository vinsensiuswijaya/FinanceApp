@model FinanceApp.Dtos.ExpenseDTO

<form asp-action="@ViewData["Action"]" method="post">
    <div>
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control"/>
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId" class="form-label">Category</label>
        <div class="d-flex align-items-center">
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
            <a class="btn btn-secondary btn-sm ms-2"
                asp-controller="Categories"
                asp-action="Create"
                asp-route-returnUrl="@Context.Request.Path"
                title="Add Category">+</a>
        </div>
    </div>
    <div>
        <label asp-for="Date" class="form-label">Date</label>
        <input asp-for="Date" type="date" class="form-control"/>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="btn-group mt-3" role="group">
        <button type="submit" class="btn btn-primary">@ViewData["ButtonText"]</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>